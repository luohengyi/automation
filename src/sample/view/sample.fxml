<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<GridPane fx:id="rootLayout" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.controller.MainController">
  <columnConstraints>
    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
  </columnConstraints>
  <rowConstraints>
    <RowConstraints />
    <RowConstraints />
      <RowConstraints vgrow="SOMETIMES" />
  </rowConstraints>
   <children>
      <BorderPane fx:id="layout" GridPane.rowIndex="2">
         <top>
            <MenuBar fx:id="menu" BorderPane.alignment="CENTER">
              <menus>
                <Menu mnemonicParsing="false" text="菜单">
                  <items>
                    <MenuItem fx:id="firewall" mnemonicParsing="false" text="防火墙" />
                        <MenuItem fx:id="banned" mnemonicParsing="false" text="ip封禁" />
                      <MenuItem fx:id="exit" mnemonicParsing="false" text="退出" />
                  </items>
                </Menu>
              </menus>
            </MenuBar>
         </top>
      </BorderPane>
   </children>
</GridPane>
